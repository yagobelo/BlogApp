<a href="/admin/postagens"><button class="btn btn-danger">Voltar</button></a>
{{#each erros}}
  <div class="alert alert-danger mt-4">{{texto}}</div>
{{else}}
{{/each}}
<div class="card mt-4">
    <div class="card-body">
      <h4>Nova Postagem</h4>
      <form action="/admin/postagens/nova" method="post">
        <label for="titulo">Título: </label>
        <input type="text" name="titulo" class="form-control" required>
        <label for="slug">Slug: </label>
        <input type="text" name="slug" class="form-control" required>
        <label for="descricao">Descrição: </label>
        <input type="text" name="descricao" class="form-control" required>
        <label for="conteudo">Conteúdo: </label>
        <textarea name="conteudo" class="form-control"></textarea required>
        <label for="categoria">Categoria: </label>
        <select name="categoria" class="form-select">
          {{#each categorias}}
            <option value="{{_id}}">{{nome}}</option>
          {{else}}
            <option value="0">Nenhuma categoria resgistrada</option>
          {{/each}}
        </select>
        <button class="btn btn-success mt-4" type="submit">Criar postagem</button>
      </form>
    </div>
</div>