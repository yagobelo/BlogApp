<a href="/categorias"><button class="btn btn-danger">Voltar</button></a>

<h1 class="mt-4">{{categorias.nome}}</h1>

{{#each postagens}}
<div class="card mt-4">
  <div class="card-body">
    <h3>{{titulo}}</h3>
    <p>{{descricao}}</p>
    <a href="/postagem/{{slug}}"><button class="btn btn-success">Leia mais!</button></a>
    <hr>
    <small>Data da Publicação: {{data}}</small>
  </div>
</div>
{{else}}
  <h5>Nenhuma postagem</h5>
{{/each}}